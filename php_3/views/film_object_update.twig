{% extends "__layout.twig" %}

{% block content %}


	<div class="card border-primary mb-3">
		<div class="card-header bg-primary text-white">
			<h1 class="m-2">Изменение объекта фильмотеки</h1>
		</div>
		{% if message %}
			<div class="alert alert-info">
				{{message}}
			</div>
		{% endif %}
		<div class="card-body text-primary">
			<form action="" enctype="multipart/form-data" method="POST" class="row g-3">
				<div class="col-md-4">
					<label class="form-label">Название</label>
					<input type="text" name="title" class="form-control" value="{{object.title}}">
				</div>
				<div class="col-6">
					<label class="form-label">Краткое описание</label>
					<input type="text" class="form-control" name="description" value="{{object.description}}">
				</div>
				<div class="col-md-4">
					<label class="form-label">Тип</label>
					<select name="type" class="form-select">
						{% for type in types %}
							<option value="{{type.name}}" {% if type.name == object.type %} selected {% endif %}>{{type.name}}</option>
						{% endfor %}
					</select>
				</div>
				<div class="col-6">
					<label class="form-label">Ссылка на видео</label>
					<input type="text" class="form-control" name="video" value="{{object.video}}">
				</div>
				<div class="col-9">
				<a class="ripple" href="/object/{{object.id}}"><img src="{{ object.image }}"
        class=" p-1 img-thumbnail rounded" /></a>
				</div>
				<div class="mb-3">
					<label class="form-label">Выберите картинку</label>
					<input class="form-control" type="file" name="image">
				</div>
				<div class="col-12">
					<textarea name="info" placeholder="Полное описание..." class="form-control" rows="5">{{object.info}}</textarea>
				</div>
				<div class="col-12 text-end">
					<button type="submit" class="btn btn-primary">Изменить</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
