{% extends "__layout.twig" %}

{% block content %}


	<div class="card border-primary mb-3">
		<div class="card-header bg-primary text-white">
			<h1 class="m-2">Добавление объекта фильмотеки</h1>
		</div>
		{% if message %}
			<div class="alert alert-info">
				{{message}}
				<a href="/object/{{id}}">Открыть новый объект</a>
			</div>
		{% endif %}
		<div class="card-body text-primary">
			<form action="" enctype="multipart/form-data" method="POST" class="row g-3">
				<div class="col-md-4">
					<label class="form-label">Название</label>
					<input type="text" name="title" class="form-control">
				</div>
				<div class="col-6">
					<label class="form-label">Краткое описание</label>
					<input type="text" class="form-control" name="description">
				</div>
				<div class="col-md-4">
					<label class="form-label">Тип</label>
					<select name="type" class="form-select text-primary">
						{% for type in types %}
							<option value="{{type.name}}">{{type.name}}</option>
						{% endfor %}
					</select>
				</div>
				<div class="col-6">
					<label class="form-label">Ссылка на видео</label>
					<input type="text" class="form-control" name="video">
				</div>
				<div class="mb-3">
					<label class="form-label">Выберите картинку</label>
					<input class="form-control" type="file" name="image">
				</div>
				<div class="col-12">
					<textarea name="info" placeholder="Полное описание..." class="form-control" rows="5"></textarea>
				</div>
				<div class="col-12 text-end">
					<button type="submit" class="btn btn-primary">Добавить</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
