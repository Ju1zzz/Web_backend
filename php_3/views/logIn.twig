{% extends "__layout.twig" %}

{% block content %}
	<div class="container">
		<div class="card border-primary mb-3">
			<div class="card-header bg-primary text-white"><form method="post" class="row g-3">
				<h1 class="m-2">Введите имя пользователя и пароль</h1>
				<div class="row">
					<button class="btn btn-light text-primary" type="submit">Войти</button>
				</div>

			</div>
			<div class="card-body text-primary">
				{% if message %}
					<div class="alert alert-danger">
						{{message}}
					</div>
				{% endif %}
					<div class="row my-2">
						<div class="col-8 mx-auto">
							<label for="inputEmail" class="sr-only">Login</label>
							<input type="login" name="login" id="inputEmail" class="form-control" placeholder="Логин" required="" autofocus="">
						</div>
						<div class="col-8 mx-auto mt-2">
							<label for="inputPassword" class="sr-only">Password</label>
							<input type="password" name="password" id="inputPassword" class="form-control mb-2" placeholder="Пароль" required="">
						</div>

					</div>

				</form>
				
			</div>
		</div>
	</div>
{% endblock %}
